<?xml version="1.0" encoding="utf-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.alttabhide" path="/org/gnome/shell/extensions/alttabhide/">
        
        <!-- List of application IDs to hide from Alt-Tab -->
        <key name="hidden-apps" type="as">
            <default>['com.gexperts.Tilix.desktop']</default>
            <summary>Hidden Applications</summary>
            <description>
                List of application IDs that should be hidden from the Alt-Tab window switcher.
                Each entry should be the full desktop file name (e.g., 'com.gexperts.Tilix.desktop').
            </description>
        </key>
        
    </schema>
</schemalist>
